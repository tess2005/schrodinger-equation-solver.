# Schrödinger Equation Solver - Infinite Square Well
import numpy as np
import matplotlib.pyplot as plt
from scipy.linalg import eigh

# Physical constants
hbar = 1.0   # Reduced Planck constant
m = 1.0      # Particle mass

# Discretize space
L = 1.0      # Length of well
N = 1000     # Number of points
x = np.linspace(0, L, N)
dx = x[1] - x[0]

# Potential: Infinite square well (0 inside)
V = np.zeros(N)

# Build Hamiltonian using finite difference
H = np.zeros((N, N))
for i in range(1, N-1):
    H[i, i-1] = -1
    H[i, i] = 2
    H[i, i+1] = -1

H = H * (-hbar**2 / (2*m*dx**2)) + np.diag(V)

# Solve eigenvalue problem
E, psi = eigh(H)

# Normalize wavefunctions
psi = psi / np.sqrt(dx)

# Plot first 3 wavefunctions
plt.figure(figsize=(8,5))
for n in range(3):
    plt.plot(x, psi[:,n] + E[n], label=f'n={n}, E={E[n]:.2f}')
plt.xlabel('x')
plt.ylabel('Energy + ψ(x)')
plt.title('Infinite Square Well - Schrödinger Equation')
plt.legend()
plt.show()

